{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "sourceMap": true,
    "rootDirs": ["./src"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
    },
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src", "@types", "node_modules/pagarme-js-types/index.d.ts"],
  "exclude": ["node_modules"]
}
